            <% } %>
        </div>
        <!--<h2 id="results"></h2>-->
        <div class="endgame">
            <div class="text"></div>
        </div>
        <div class="buttons">
            <button id="play-again" onclick="startGame()">Play Again</button>
            <button id="go-back" ><a href="/" style="text-decoration: none;">Go Back</a></button>
        </div>
    </div>
