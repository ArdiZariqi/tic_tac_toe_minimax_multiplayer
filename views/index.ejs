<%- include('includes/head.ejs') %>

    <link rel="stylesheet" href="/css/index.css">
</head>
<body>

    <form action="/board" method="post">
        <div class="landing-container">
            <h1>TIC TAC TOE</h1>

            <div class="options">
                <h2>Choose Your Symbol:</h2>
                <div class="symbol-choice selected" data-symbol="X">X</div>
                <div class="symbol-choice" data-symbol="O">O</div>
                <input type="radio" id="symbolX" name="symbol" value="X" hidden checked>
                <input type="radio" id="symbolO" name="symbol" value="O" hidden>
            </div>

            <div class="options custom-select">
                <h2>Who Plays First:</h2>
                <select name="whoPlaysFirst">
                    <option value="Player">Player</option>
                    <option value="Computer">Computer</option>
                </select>
            </div>
            <% if(errorMessage){ %>
                <div class="error_statement">
                    <%= errorMessage %>
                </div>
            <% } %>
             
            <div class="player_name">

                <input type="text" id="playerName" name="playerName" 
                    class="custom-input <%= validationErrors.find(e => e.path === 'playerName') ? 'error_input' : '' %>"
                    placeholder="Enter your name"
                    value="<%= oldInput.playerName %>"
                    >
                </div>
                <br>

            <button id="startGame" type="submit">Start Game</button>
        </div>
    </form>

    <script src="/js/index.js"></script>
    <%- include('includes/end.ejs') %>
